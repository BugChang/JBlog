@model IList<JBlog.Application.ViewModels.ArticleViewModel>
@foreach (var article in Model)
{

    <article class="post">

        <div class="post-header">
            <h2 class="post-title"><a href="index.html#">@article.Title</a></h2>
            <ul class="post-meta">
                <li><i class="mdi mdi-calendar"></i> @article.CreateOn</li>
                <li><i class="mdi mdi-tag-text-outline"></i> <a href="index.html#">@article.CategoryName</a></li>
                <li><i class="mdi mdi-comment-multiple-outline"></i> <a href="index.html#">3 Comments</a></li>
            </ul>
        </div>

        <div class="post-preview">
            <a href="index.html#"><img src="images/blog/blog-1.jpg" alt="" class="img-fluid rounded"></a>
        </div>

        <div class="post-content">
            <p>@article.Content</p>

        </div>

        <div><a href="index.html#" class="btn btn-outline-custom">Read More <i class="mdi mdi-arrow-right"></i></a></div>

    </article>
}
<!-- Pagination-->
<div class="row">
    <div class="col-lg-12">
        <ul class="pagination">
            <li class="next"><a href="index.html#"><i class="mdi mdi-chevron-left"></i></a></li>
            <li class="active"><a href="index.html#">1</a></li>
            <li><a href="index.html#">2</a></li>
            <li><a href="index.html#">3</a></li>
            <li><a href="index.html#">4</a></li>
            <li><a href="index.html#">5</a></li>
            <li class="prev"><a href="index.html#"><i class="mdi mdi-chevron-right"></i></a></li>
        </ul>
    </div>
</div>
<!-- Pagination end-->