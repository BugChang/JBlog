@model JBlog.Common.Models.PageResult<JBlog.Application.ViewModels.ArticleViewModel>
@{
    ViewBag.isShow = true;
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <div class="row">
                        <div class="col-md-9 col-xs-12">
                            <h2><span>News and Stories</span></h2>

                            <p class="subtitle text-muted">Aenean sollicitudin, lorem quis bibendum auctor, nisi elit consequat ipsum, nec sagittis sem nibh id elit. Proin gravida nibh vel velit auctor Aenean sollicitudin, adipisicing elit sed lorem quis bibendum auctor.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pb-5">
    <div class="container">
        <div class="row pt-5">
            <div class="col-xl-8">
                @foreach (var article in Model.Records)
                {

                    <article class="post">

                        <div class="post-header">
                            <h2 class="post-title"><a asp-controller="Article" asp-action="Index" asp-route-id="@article.Id">@article.Title</a></h2>
                            <ul class="post-meta">
                                <li><i class="mdi mdi-calendar"></i> @article.CreateOn</li>
                                <li><i class="mdi mdi-tag-text-outline"></i> <a asp-controller="Article" asp-action="Index" asp-route-id="@article.Id">@article.CategoryName</a></li>
                                <li><i class="mdi mdi-comment-multiple-outline"></i> <a asp-controller="Article" asp-action="Index" asp-route-id="@article.Id">3 Comments</a></li>
                            </ul>
                        </div>

                        <div class="post-preview">
                            <a asp-controller="Article" asp-action="Index" asp-route-id="@article.Id"><img src="images/blog/blog-1.jpg" alt="" class="img-fluid rounded"></a>
                        </div>

                        <div class="post-content">
                            <p>@Html.Raw(article.Content.Substring(0,200))</p>

                        </div>

                        <div><a asp-controller="Article" asp-action="Index" asp-route-id="@article.Id" class="btn btn-outline-custom">Read More <i class="mdi mdi-arrow-right"></i></a></div>

                    </article>
                }
                <!-- Pagination-->
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            <li class="next"><a href="index.html#"><i class="mdi mdi-chevron-left"></i></a></li>
                            <li class="active"><a href="index.html#">1</a></li>
                            <li><a href="index.html#">2</a></li>
                            <li><a href="index.html#">3</a></li>
                            <li><a href="index.html#">4</a></li>
                            <li><a href="index.html#">5</a></li>
                            <li class="prev"><a href="index.html#"><i class="mdi mdi-chevron-right"></i></a></li>
                        </ul>
                    </div>
                </div>
                <!-- Pagination end-->
            </div>
            <div class="col-xl-4">
                @await Component.InvokeAsync("SideBar")
            </div>
        </div>
    </div>
</section>
